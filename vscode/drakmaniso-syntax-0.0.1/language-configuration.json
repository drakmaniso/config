{
    "comments": {
        "lineComment": "--",
        "blockComment": [
            "<<",
            ">>"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "`",
            "close": "`",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "<<",
            "close": ">>",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "/*",
            "close": "*/",
            "notIn": [
                "string"
            ]
        }
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "`",
            "`"
        ]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+\\'*)",
    "--indentationRules": {
        "increaseIndentPattern": "^((?!.*?\\/\\*).*\\*\/)?\\s*[\\}\\]].*$",
        "--decreaseIndentPattern": "(^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$)|(^\\s*end\\s*$)",
        "decreaseIndentPattern": "^\\s*end\\s*$"
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*((do|forall|require|ensure|invariant|if|elseif|else|match|case)|(.*\\sdo\\b))\\b[^\\{;]*$",
        "--decreaseIndentPattern": "^\\s*((end|else|elseif)|[}\\]]\b)"
    },
    "onEnterRules": [
        {
            "beforeText": "/\\*",
            "afterText": "\\*/",
            "action": {
                "indent": "none",
                "appendText": "\n"
            }
        },
        {
            "beforeText": "<<",
            "afterText": ">>",
            "action": {
                "indent": "none",
                "appendText": "\n"
            }
        },
        {
            "beforeText": "\\s=\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "do",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "end",
            "action": {
                "indent": "outdent"
            }
        }
    ]
}